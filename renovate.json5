{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sunecosuri/renovate-config"
  ],
  "labels": [
    "renovate"
  ],
  "prConcurrentLimit": 10,
  "major": {
    "stabilityDays": 7
  },
  "minor": {
    "stabilityDays": 3
  },
  "patch": {
    "stabilityDays": 2
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "renovate",
      "Security"
    ],
    "stabilityDays": 0
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "labels": [
        "renovate",
        "devDependencies"
      ],
      "groupName": "Update devDependencies"
    }
  ]
}
